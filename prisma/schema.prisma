generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  name           String
  address        String?
  email          String
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  orders         Order[]
  Account        Account[]
}

model Account {
  id                Int     @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade) // this creates a relation. Rewatch antpnio on his part on youtube for more unserstanding  @1:40:00 

  @@unique([provider, providerAccountId])
}

model Cart {
  id              Int    @id @default(autoincrement())
  productQuantity Int
  order           Order?
}

model Order {
  id                 Int      @id @default(autoincrement())
  Price              Float
  Date               DateTime
  user               User     @relation(fields: [userId], references: [id])
  userId             Int
  productID          Int
  cardID             Int
  productDescription Products @relation(fields: [productID], references: [id])
  card               Cart     @relation(fields: [cardID], references: [id])

  @@unique([cardID])
}

model Products {
  id           Int              @id @default(autoincrement())
  name         String
  description  String
  priceInCents Int
  category     ItemCategories[]
  orders       Order[]
}

enum ItemCategories {
  Tech
  Lifestyle
  Healcare
  PersonalCare
  Food
}
