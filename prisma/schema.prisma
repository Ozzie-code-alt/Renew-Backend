generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  address  String
  email    String
  password String
  orders   Order[]
}

model Order {
  id                 Int      @id @default(autoincrement())
  Price              Float
  Date               DateTime
  user               User     @relation(fields: [userId], references: [id])
  userId             Int
  productID          Int
  productDescription Products @relation(fields: [productID], references: [id])
}

model Products {
  id           Int              @id @default(autoincrement())
  name         String
  description  String
  priceInCents Int
  category     ItemCategories[]
  orders       Order[]
}

enum ItemCategories {
  Tech
  Lifestyle
  Healcare
  PersonalCare
  Food
}
